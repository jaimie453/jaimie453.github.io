{% macro createCard(title, description, url, image, tags) %}
  <li class="card">
    <img class="card__image" src="../../assets/images/{{ image }}" loading="lazy" alt=""/>
    <a href="{{ url }}" class="card__link">
      <h3 class="card__title">{{ title }}</h3>
    </a>
    <p class="card__body">
      {{ description }}
    </p>
    <p class="visually-hidden">Tagged:</p>
    <ul class="card__tags">
      {% for tag in tags %}
        <li>{{ tag }}</li>
      {% endfor %}
    </ul>
  </li>
{% endmacro %}