<header class="header" id="header">
    <div class="skip-nav">
        <a class="skip-nav__link" href="#main">Skip to main content</a>
    </div>
    <nav class="nav">
        <div class="nav__menu">
            <a class="nav__logo" href="{{ '/' | url }}" aria-label="Home" {% if page.url == "/" %} aria-current="page" {% endif %}>
                {% include "../../assets/images/rose.svg" %}
            </a>
            <button class="nav__menu-trigger" type="button" id="navMenuTrigger" aria-expanded="false" onclick="toggleMenu();">Menu</button>
        </div>
        <div class="nav__content">
            <ul class="nav__list">
                <li class="nav__list-item">
                    <a class="nav__link" href="{{ '/projects' | url }}" {% if page.url == "/projects/" %} aria-current="page" {% endif %}>
                        Projects
                    </a>
                </li>
                <li class="nav__list-item">
                    <a class="nav__link" href="{{ '/about' | url }}" {% if page.url == "/about/" %} aria-current="page" {% endif %}>
                        About
                    </a>
                </li>
            </ul>
            <div class="nav__socials">
                {% include "../components/socials.njk" %}
            </div>
        </div>
    </nav>
</header>